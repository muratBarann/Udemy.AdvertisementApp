@model UserCreateModel
@{
    Layout = "_Layout";
}

<div class="mt-4">

    <form asp-action="SignUp" asp-controller="Account" method="post" class="form form-control p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>İsim : </label>
            <input type="text" asp-for="@Model.Firstname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyisim : </label>
            <input type="text" asp-for="@Model.Surname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adı</label>
            <input type="text" asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Phone Number : </label>
            <input type="text" asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <select asp-items="@Model.Genders" asp-for="@Model.GenderId" class="form-control">
                <option value="0">Bir seçenek seçiniz</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Şifreniz : </label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifreniz Tekrar : </label>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary ">Kayıt Ol</button>
        </div>

        <div class="mb-3 text-center text-danger" asp-validation-summary="All">

        </div>

    </form>


</div>

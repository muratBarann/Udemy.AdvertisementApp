@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}

<div class="container mt-3">
    <div class="text-center">
        <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
    </div>

    @{
        if (Model?.Count > 0)
        {

            <table class="table table-striped">

                <thead>
                    <tr>
                        <th scope="col">İlan Adı</th>
                        <th scope="col">Oluşturulma Tarihi</th>
                        <th scope="col">Durumu</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertisemet in Model)
                    {
                        <tr>
                            <td>@advertisemet.Title</td>
                            <td>@(advertisemet.Status ? "Aktif" : "Pasif")</td>
                            <td>@advertisemet.CreatedTime.ToString("dddd, dd MMMM yyyy")</td>
                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-id="@advertisemet.Id">Güncelle</a>
                                <a asp-action="Remove" asp-controller="Application" asp-route-id="@advertisemet.Id">Silme</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }

        else
        {
            <div class="mt-3 text-center lead">
                Herhangi bir başvuru bulunmamaktadır.
            </div>

            <div class="text-center">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>

            </div>

        }


    }



</div>